"      \ "active_filetypes": [],
"      \ "passive_filetypes": [] }
"
" nnoremap <leader>l :SyntasticCheck<CR>

" Vim Debug {{{
let g:vdebug_options = {
     \ 'path_maps': {
     \ '/var/www/dc-commerce': '/home/hideki/Documents/fazen/dc-commerce/www/dc-commerce'
     \ }
     \ }
" }}}
